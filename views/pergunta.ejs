<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>
<div class="container">
  <h1 class="mt-4 text-white bg-secondary shadow-sm title"><%= pergunta.titulo %></h1>
  <p class="desc"><%= pergunta.descricao %></p>
  <br>
  <form action="/responder" method="POST">
    <h3>Responder pergunta</h3>
    <br>
    <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
    <textarea placeholder="Digite sua resposta" class="form-control" name="corpo" cols="2" rows="2"></textarea>
    <br>
    <button type="submit" class="btn btn-success">Responder</button>
  </form>
  <hr>
  <h3>Respostas</h3>
  <% respostas.forEach(resposta => {%> 
    <br>  
    <div class="card bg-dark">
      <div class="card-body text-white">
        <%= resposta.corpo %>
      </div>
    </div>
  <%}) %>
</div>
</body>
<%- include('partials/footer.ejs') %>
